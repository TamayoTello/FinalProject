extends layout

block content

  if (user.username =="teamjuan")
   #page-content.container
    .row
      .col-md-8.col-md-offset-1
        // CONTENT
        br
        .login-container
          .page-header
            h1
              center
                | Manage Video
            h3
              center  
                | Update, Edit, Delete.

          form.form-horizontal(method= 'POST', action= '/videos/' + videoInfo._id, onsubmit= 'return validateTaskForm()')
            .row
              br
              br
              br
              .col-md-10.col-md-offset-3
                p
                p
                .input-group
                  span#sizing-addon1.input-group-addon Video Title
                  input.form-control(name='videoTitle', type='text', value= videoInfo.videoTitle, aria-describedby='sizing-addon1')
                p
                p
                .input-group
                  span#sizing-addon1.input-group-addon Video Embed
                  input.form-control(name='videoEmbed', value= videoInfo.videoEmbed, aria-describedby='sizing-addon1')
                p
                p
                .input-group
                  span#sizing-addon1.input-group-addon Video Details
                  input.form-control(name='videoDetails', type='text', rows='3', cols='10', value= videoInfo.videoDetails, aria-describedby='sizing-addon1')
                p
                p
                .input-group
                  if (videoInfo.videoCategory == "Science")
                    span#sizing-addon1.input-group-addon Video Category
                    select.form-control(name='videoCategory')
                      option(value='No Category' ) No Category
                      option(value='Mathematics') Mathematics
                      option(value='English') English
                      option(value='Filipino') Filipino
                      option(value='Science', selected= "selected") Science
                      option(value='MAPEH') MAPEH (Music, Arts, P.E. Health)
                      option(value='AP') Araling Panlipunan
                      option(value='Values') Values
                  else
                    if (videoInfo.videoCategory == "Mathematics")
                      span#sizing-addon1.input-group-addon Video Category
                      select.form-control(name='videoCategory')
                        option(value='No Category' ) No Category
                        option(value='Mathematics', selected= "selected") Mathematics
                        option(value='English') English
                        option(value='Filipino') Filipino
                        option(value='Science') Science
                        option(value='MAPEH') MAPEH (Music, Arts, P.E. Health)
                        option(value='AP') Araling Panlipunan
                        option(value='Values') Values
                    else 
                      if (videoInfo.videoCategory == "No Category")
                        span#sizing-addon1.input-group-addon Video Category
                        select.form-control(name='videoCategory')
                          option(value='No Category', selected= "selected") No Category
                          option(value='Mathematics') Mathematics
                          option(value='English') English
                          option(value='Filipino') Filipino
                          option(value='Science') Science
                          option(value='MAPEH') MAPEH (Music, Arts, P.E. Health)
                          option(value='AP') Araling Panlipunan
                          option(value='Values') Values
                      else 
                        if (videoInfo.videoCategory == "English")
                          span#sizing-addon1.input-group-addon Video Category
                          select.form-control(name='videoCategory')
                            option(value='No Category') No Category
                            option(value='Mathematics') Mathematics
                            option(value='English', selected= "selected") English
                            option(value='Filipino') Filipino
                            option(value='Science') Science
                            option(value='MAPEH') MAPEH (Music, Arts, P.E. Health)
                            option(value='AP') Araling Panlipunan
                            option(value='Values') Values
                        else
                          if (videoInfo.videoCategory == "Filipino")
                            span#sizing-addon1.input-group-addon Video Category
                            select.form-control(name='videoCategory')
                              option(value='No Category') No Category
                              option(value='Mathematics') Mathematics
                              option(value='English') English
                              option(value='Filipino', selected= "selected") Filipino
                              option(value='Science') Science
                              option(value='MAPEH') MAPEH (Music, Arts, P.E. Health)
                              option(value='AP') Araling Panlipunan
                              option(value='Values') Values
                          else
                            if (videoInfo.videoCategory == "MAPEH")
                              span#sizing-addon1.input-group-addon Video Category
                              select.form-control(name='videoCategory')
                                option(value='No Category') No Category
                                option(value='Mathematics') Mathematics
                                option(value='English') English
                                option(value='Filipino') Filipino
                                option(value='Science') Science
                                option(value='MAPEH', selected= "selected") MAPEH (Music, Arts, P.E. Health)
                                option(value='AP') Araling Panlipunan
                                option(value='Values') Values
                            else
                              if (videoInfo.videoCategory == "AP")
                                span#sizing-addon1.input-group-addon Video Category
                                select.form-control(name='videoCategory')
                                  option(value='No Category') No Category
                                  option(value='Mathematics') Mathematics
                                  option(value='English') English
                                  option(value='Filipino') Filipino
                                  option(value='Science') Science
                                  option(value='MAPEH') MAPEH (Music, Arts, P.E. Health)
                                  option(value='AP', selected= "selected") Araling Panlipunan
                                  option(value='Values') Values
                              else
                                if (videoInfo.videoCategory == "Values")
                                  span#sizing-addon1.input-group-addon Video Category
                                  select.form-control(name='videoCategory')
                                    option(value='No Category') No Category
                                    option(value='Mathematics') Mathematics
                                    option(value='English') English
                                    option(value='Filipino') Filipino
                                    option(value='Science') Science
                                    option(value='MAPEH') MAPEH (Music, Arts, P.E. Health)
                                    option(value='AP') Araling Panlipunan
                                    option(value='Values', selected= "selected") Values
                br
                br

                br
                .col-md-5.col-md-offset-2
                  center
                    .btn-group
                      button.btn.btn-primary(name='submit', type='submit') Update Video
                p
        .panel-login-footer
          .box-content
            h3
              center
                | Check out Other Videos?
                br
                p
                .btn-group
                  a(href= '/videos')
                    button.btn.btn-success(type='button') Click Here
        p
        
  else
    a.site-brand
      .box-content
        h3.widget-title R E S T R I C T E D - A R E A  