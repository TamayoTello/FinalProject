extends layout

block content
  #page-content.container
    .row
      .col-md-9.col-sm-12.content-holder
        // CONTENT
        #menu-container

          if (user.username == "teamjuan")
            .login-container
              .page-header
                h1
                  center
                    | Video Requests
                h3
                  center  
                    | Manage requests here.
              .container.center#allLinks
              .col-md-15.col-sm-15
                .box-content2
                  form.task-form(action='/requests', method='get')
                    .row
                      br
                      .col-md-10.col-md-offset-0
                        br
                        table.table-hover
                          br
                          tr
                            th(style='width:50%') Video Name
                            th(style='width:50%') Requested By
                            th(style='width:25%')

                          tbody#data
                             

                          tbody#data
                              each request, i in requests
                                tr
                                  td= request.reqVideoTitle
                                  td= request.reqUsername
                                  td
                                    a.red-text(href= "/requests/" + request._id)
                                      button.btn.btn-danger(type='button') See Request
                              p
                  br
                  br
          else
            a.site-brand
              .box-content
                h3.widget-title3 N O - P E R M I S S I O N